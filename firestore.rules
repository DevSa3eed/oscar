rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Duty persons collection - allow read for demo purposes, authenticated users can read all, but only HODs can write
    match /duty_persons/{dutyPersonId} {
      allow read: if true; // Allow unauthenticated read for demo mode
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hod';
    }
    
    // Duty checks collection - allow read for demo purposes, supervisors and HODs can read/write
    match /duty_checks/{dutyCheckId} {
      allow read: if true; // Allow unauthenticated read for demo mode
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'supervisor' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hod');
    }
    
    // Reports collection - allow read for demo purposes, HODs can read/write, supervisors can read
    match /reports/{reportId} {
      allow read: if true; // Allow unauthenticated read for demo mode
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hod';
    }
    
    // Locations collection - allow read for demo purposes, authenticated users can read, HODs can write
    match /locations/{locationId} {
      allow read: if true; // Allow unauthenticated read for demo mode
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hod';
    }
    
    // Duty assignments collection - allow read for demo purposes, authenticated users can read, HODs can write
    match /duty_assignments/{assignmentId} {
      allow read: if true; // Allow unauthenticated read for demo mode
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'hod';
    }
  }
}
